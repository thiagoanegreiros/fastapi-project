{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Uvicorn",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload"
            ],
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug Pytest Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["tests"],  // Runs all tests in the "tests" folder
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}